{
  "name": "sinavia-backend",
  "version": "0.0.0-development",
  "description": "Sinavia mobile app backend",
  "main": "index.js",
  "engines": {
    "node": ">=9",
    "npm": ">=5"
  },
  "scripts": {
    "gc": "git-cz",
    "start": "NODE_PATH=. node index.js",
    "poststart": "node ./node_modules/pm2/bin/pm2 logs",
    "start:dev": "NODE_PATH=. nodemon index.js",
    "start:cc": "codecrumbs -d src -e src/container.js",
    "start:docs": "docsify serve docs",
    "test:test": "standard --verbose | snazzy && npm run db:refresh-test && npm run test:covtest",
    "test:local": "standard --verbose | snazzy && npm run db:refresh-test && npm run test:covlocal",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "test:covtest": "cross-env NODE_PATH=. NODE_ENV=test istanbul cover node_modules/mocha/bin/_mocha -- --exit",
    "test:specstest": "cross-env NODE_PATH=. NODE_ENV=test mocha --exit",
    "test:covlocal": "cross-env NODE_PATH=. NODE_ENV=local istanbul cover node_modules/mocha/bin/_mocha -- --exit",
    "test:specslocal": "cross-env NODE_PATH=. NODE_ENV=local mocha --exit",
    "db:reset": "cross-env NODE_PATH=. && echo $NODE_PATH && npm run db:refresh && npm run seed",
    "db:refresh": "sequelize db:migrate:undo:all && sequelize db:migrate",
    "db:refresh-test": "sequelize db:migrate:undo:all --env test && sequelize db:migrate --env test",
    "migrate": "sequelize db:migrate",
    "migrate:test": "sequelize db:migrate --env test",
    "seed": "cross-env NODE_ENV=local NODE_PATH=. sequelize db:seed:all --seeders-path=./src/infra/sequelize/seeders/development",
    "seed:test": "cross-env NODE_ENV=development sequelize db:seed:all --env test --seeders-path=./src/infra/sequelize/seeders/development",
    "lint": "standard --verbose | snazzy",
    "lint:fix": "standard --fix",
    "lint:staged": "lint-staged",
    "fresh-install": "rm -rf node_modules && npm cache clean --force && npm install",
    "docker:script": "docker-compose run --rm web",
    "docker:db:reset": "npm run docker:script npm run db:reset",
    "docker:db:refresh": "npm run docker:script npm run db:refresh",
    "docker:db:refresh-test": "npm run docker:script npm run db:refresh",
    "docker:test": "npm run docker:script npm run test",
    "docker:test:specs": "npm run docker:script npm run test:specs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "npm run lint"
  },
  "dependencies": {
    "@colyseus/monitor": "^0.10.0",
    "awilix": "4.2.0",
    "awilix-express": "2.1.1",
    "bcrypt": "3.0.6",
    "body-parser": "1.18.3",
    "colyseus": "^0.10.8",
    "compression": "1.7.3",
    "cors": "2.8.5",
    "cross-env": "5.2.0",
    "dotenv-flow": "^3.0.0",
    "express": "4.16.4",
    "express-status-monitor": "1.2.3",
    "faker": "4.1.0",
    "g": "^2.0.1",
    "http-status": "1.3.1",
    "jsonwebtoken": "8.5.0",
    "moment": "2.24.0",
    "moment-timezone": "0.5.23",
    "morgan": "1.9.1",
    "nodemon": "1.18.10",
    "passport": "0.4.0",
    "passport-jwt": "4.0.0",
    "pg": "7.8.1",
    "pm2": "^3.5.1",
    "ramda": "0.26.1",
    "request": "^2.88.0",
    "sequelize": "5.5.0",
    "sequelize-cli": "^5.5.0",
    "swagger-jsdoc": "3.2.9",
    "tcomb": "3.2.29",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "chai": "4.2.0",
    "codecrumbs": "1.1.5",
    "commitizen": "3.0.7",
    "coveralls": "3.0.3",
    "cz-conventional-changelog": "2.1.0",
    "docsify-cli": "4.3.0",
    "husky": "^3.0.2",
    "istanbul": "1.1.0-alpha.1",
    "lint-staged": "^9.2.1",
    "mocha": "6.1.4",
    "mocha-lcov-reporter": "1.3.0",
    "npm-check": "5.9.0",
    "pre-commit": "1.2.2",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.19",
    "sinon": "7.2.7",
    "sinon-chai": "3.3.0",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1",
    "supertest": "3.4.2"
  },
  "standard": {
    "ignore": [
      "/public/docs"
    ],
    "globals": [
      "request",
      "app",
      "expect",
      "describe",
      "it",
      "config",
      "beforeEach"
    ]
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "release": {
    "publish": [
      "@semantic-release/github"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "logs/*",
      "redis-data/*",
      "postgres-data/*",
      "coverage/*"
    ],
    "delay": "1000"
  },
  "resolutions": {
    "axios": "0.18.1",
    "fstream": "1.0.12"
  }
}
